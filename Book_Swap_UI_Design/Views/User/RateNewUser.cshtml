@model Book_Swap_Models.Models.RateUserRequest

@{
    ViewData["Title"] = "RateNewUser";
}

<h1>RateNewUser</h1>

<h4>RateUserRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RateNewUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FromUserId" class="control-label"></label>
                @Html.DropDownList("FromuserDropList", ViewBag.UserList as SelectList, "Select From User",new {@class="form-control"})
            </div>
           <div class="form-group">
                <label asp-for="BorrowerId" class="control-label"></label>
                @Html.DropDownList("BorrowerDropList", ViewBag.UserList as SelectList, "Select Borrower",new {@class="form-control"})
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

